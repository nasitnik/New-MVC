    <script>

        $(document).ready(function () {
            setSelectedMenu();
        });
        $("#headingtext").click(function(){
            $(".sidebar").toggle();
           });
        $(function () {
            $('input.singledatepicker').daterangepicker({
                "singleDatePicker": true,
                autoUpdateInput: false,
                "showDropdowns": true,
                locale: {
                    cancelLabel: 'Clear'
                }
            });
            $('input.singledatepicker').attr("placeholder", "mm/dd/yyyy");
            $('input.singledatepicker').on('apply.daterangepicker', function (ev, picker) {
                debugger;
                $(this).val(picker.startDate.format('MM/DD/YYYY'));
                $('input.singledatepicker').trigger('keyup');
            });
        });

        //Input time picker 24 ht to convert 12 hr
        function onTimeChange(timeVal) {
            var timeSplit = timeVal.split(':'),
                hours,
                minutes,
                meridian;
            hours = timeSplit[0];
            minutes = timeSplit[1];
            if (hours > 12) {
                meridian = 'PM';
                hours -= 12;
            } else if (hours < 12) {
                meridian = 'AM';
                if (hours == 0) {
                    hours = 12;
                }
            } else {
                meridian = 'PM';
            }
            return hours + ':' + minutes + ' ' + meridian;
        }

        function setSelectedMenu() {
            $(".main-menu").find("li.active").each(function () {
                $(this).removeClass("active");
            });

            if ("@curController" == "Home") {
                setActiveLink($('#Dashboard').attr('id'));
            } else if ("@curController" == "Customer") {
                setActiveLink($('#customer').attr('id'));
            } else if ("@curController" == "Faq") {
                setActiveLink($('#faq').attr('id'));
            } else if ("@curController" == "PackagePrice") {
                setActiveLink($('#packagePrice').attr('id'));
            } else if ("@curController" == "Driver") {
                setActiveLink($('#driver').attr('id'));
            } else if ("@curController" == "Trip") {
                setActiveLink($('#trip').attr('id'));
            } else if ("@curController" == "PromoCode") {
                setActiveLink($('#promoCode').attr('id'));
            } else if ("@curController" == "ChangePassword") {
                setActiveLink($('#ChangePassword').attr('id'));
            } else if ("@curController" == "MasterData"  && "@curAction" == "MasterProductType") {
                setActiveLink($('#MasterData').attr('id'));
                setActiveLink($('#ProductType').attr('id'));
                $('.active ul').attr('aria-expanded', true);
                $('.active ul').addClass('in');
                $('.active ul').css('height', 'inherit');
            } else if ("@curController" == "MasterData" && "@curAction" == "MasterProductBrand") {
