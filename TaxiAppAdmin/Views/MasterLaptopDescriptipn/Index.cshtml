            $.ajax({
                type: "POST",
                url: '@Url.Action(Actions.PricePackageUpsert, Controllers.MasterLaptopDescriptipn)',
                async: false,
                data: formData,
                dataType: 'json',
                contentType: false,
                processData: false,
                success: function (response) {
                    debugger;
                    if (response.Code == 200) {
                        $('#AddNewPricePackagePopup').modal('hide');
                        swal("Great!", response.Message, "success");

                        $('#ProductTypeId').val(0)
                        //$('#productcategory').val('')
                        $('#PricePackageId').val('')
                        $('#price').val('')
                        ProductCategoryDataTable.init();
                    }
                    else {
