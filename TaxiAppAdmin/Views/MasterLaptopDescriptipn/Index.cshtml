        function AddPricePackage() {

            $("#AddNewPricePackagePopup").hide();
            $(".loading").show();
            $(".closeBtn").hide();

            var formData = new FormData();
            formData.append("Id", $("#PackageId").val());
            formData.append("Price", $("#price").val());
            formData.append("MasterHourId", $("#PricePackageId").val());
